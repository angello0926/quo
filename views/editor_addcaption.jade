extends layout

block head
  link(rel='stylesheet', type='text/css', href='/css/editorquo.css')
  script(src='/js/editor_addcaption.js')


block content

  section
    .row
      .col-xs-10.col-sm-10.col-sm-offset-1.col-md-6.col-md-offset-0.col-lg-5.col-lg-offset-1
        #quotespic
          img(class='quotesimg' src="/#{quote_pic}")


      .col-xs-10.col-sm-10.col-sm-offset-1.col-md-6.col-md-offset-0.col-lg-6
        #controlcontent
            textarea#addcaption.form-control(name='caption' rows='3', placeholder="What's your thought?")
            textarea#addauthor.form-control(name='author' rows='1', placeholder="author")
            textarea#addtitle.form-control(name='title' rows='1', placeholder="title")
            textarea#addtags.form-control(name='tags' rows='1', placeholder="tags")
            button#submit  submit

