.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/explore')
        img(src='/assets/logo.svg')
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li(class=(title == 'Search'))
          input.form-control(name='search', id='search', placeholder='Search Quotes', autofocus)
        li(class=(title == 'Home') ? 'active' : undefined)
          a(href='/home') Home
        li(class=(title == 'Subcription') ? 'active' : undefined)
          a(href='/subscription') Subcription
        li(class=(title == 'Editor') ? 'active' : undefined)
          a(href='/editor') Editor
        li(class=(title == 'Bookmark') ? 'active' : undefined)
          a(href='/bookmark') Bookmark
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=(title == 'Login') ? 'active' : undefined)
            a(href='/login') Login
          li(class=(title == 'Create Account') ? 'active' : undefined)
            a(href='/signup') Create Account
        else
          li.dropdown(class=(title == 'Account Management') ? 'active' : undefined)
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                if user.profile.picture
                  img.propic(src='#{user.profile.picture}')
                else
                  img.propic(src='#{user.gravatar(60)}')
                | #{user.profile.name || user.email || user.id}&nbsp;
                i.caret
              ul.dropdown-menu
                li
                  a(href='/account') My Account
                li.divider
                li
                  a(href='/logout') Logout